# This is a comment
file_notes_db = ./notes.bin

# Some defaults
always_ask_for_confirmation = true
monochrome                  = yes
print_counter               = no

# Note colors
note_id_color     = gray
note_title_color  = cyan
note_body_color   = green
note_search_color = red

# Note format is a valid printf format!
note_id_format = 0x%04X

# Format to be used when using action 'list'
list_format = [@ID@] @TITLE@ @IF_BODY@: @BODY@ :@END_IF_BODY@ @PRIORITY_TEXT@

# Priority colors
priority_low_color     = black
priority_default_color = white
priority_high_color    = blue

# Priority texts
priority_low_text     = doesn't matter
priority_default_text = look at it
priority_high_text    = do it now!

# Web stuff
templates_directory = @prefix@/share/lali/templates/
resources_directory = @prefix@/share/lali/resources/
server_web_port     = 3030

# Servlets configuration
servlet_list        = default

# Default servlet configuration
# Binding the servlet address to `/default/' will also bind the
# following addresses :
# `/default/resources/' for CSS, JS and images ;
# `/default/static/' for static web pages (default .html)
servlet_default_address   = /default/
servlet_default_db_file   = @prefix@/share/lali/servlets/default/notes.db
servlet_default_resources = @prefix@/share/lali/servlets/default/resources/
servlet_default_templates = @prefix@/share/lali/servlets/default/templates/
servlet_default_static    = @prefix@/share/lali/servlets/default/static/

